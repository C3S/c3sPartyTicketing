<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="base"
      i18n:domain="c3spartyticketing"
      tal:define="formerror formerror|False">
  <!-- metal : use-macro="loggedinpt" -->
  <tal:block metal:fill-slot="deform-js-css">
    <link href="${request.static_url('c3spartyticketing:static/bootstrap-3.0.3-dist/css/bootstrap.css')}"
          rel="stylesheet" type="text/css" media="screen" charset="utf-8" />
    <script src="${request.static_url('deform:static/bootstrap-3.0.3-dist/js/bootstrap.js')}"
            type="text/javascript"></script>
    <script src="${request.static_url('c3spartyticketing:static/ss/jquery-ui.js')}"></script>
    <script type="text/javascript"
            src="${request.static_url('c3spartyticketing:static/ticketform/ticketform.js')}"></script>
    <link rel="stylesheet" type="text/css" media="screen" charset="utf-8"
          href="${request.static_url('c3spartyticketing:static/c3sM.css')}" />
  </tal:block>

  <tal:block metal:fill-slot="top"></tal:block>

  <tal:block metal:fill-slot="middle">

    <h1>Ticket #${ticket.id}</h1>

    <div tal:condition="not formerror">
      <h2>Details</h2>
      <!-- h2>readonly form:</h2>
      <div tal : content="structure readonlyform">the form, readonly</div>
      <h2>edit form:</h2>
      <div tal : content="structure editform">the form, readonly</div>
      <h2>html with variables:</h2 -->
      <table class="table-striped">
        <tr  class="table-striped">
          <td>Vorname</td>
          <td>${ticket.firstname}</td>
        </tr>
        <tr>
          <td>Nachname</td>
          <td>${ticket.lastname}</td>
        </tr>
        <tr>
          <td>Email</td>
          <td><a href="mailto:${ticket.email}">${ticket.email}</a></td>
        </tr>
        <tr>
          <td>Mitgliedschaft</td>
          <td>${ticket.membership_type}</td>
        </tr>
        <tr>
          <td>Token</td>
          <td>${ticket.token}</td>
        </tr>
        <tr>
          <td>Komment</td>
          <td>${ticket.user_comment}</td>
        </tr>
        <tr>
          <td>locale</td>
          <td>${ticket.locale}</td>
        </tr>
        <tr>
          <td>Gästeliste</td>
          <td>
            <table>
              <tr>
                <td>Barcamp:</td>
                <td>${ticket.guestlist_bc or 'no'}</td>
              </tr>
              <tr>
                <td>Generalversammlung:</td>
                <td>${ticket.guestlist_gv or 'no'}</td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td>Teilnahme Barcamp</td>
          <td>${'Yes' if ticket.ticket_bc_attendance else "No"}</td>
        </tr>
        <tr>
          <td>Buffet Barcamp</td>
          <td>${'Yes' if ticket.ticket_bc_buffet else "No"}</td>
        </tr>
        <tr>
          <td>Teilnahme Generalversammlung</td>
          <td>${'Yes' if ticket.ticket_gv_attendance == 1 else "No"}</td>
        </tr>
        <tr>
          <td>Vertretung Generalversammlung</td>
          <td>${'Yes' if ticket.ticket_gv_attendance == 2 else "No"}</td>
        </tr>
        <tr tal:condition="ticket.ticket_gv_attendance == 2">
          <td>Vertreten von:</td>
          <td>
            <table>
              <tr>
                <td>Vorname</td>
                <td>${ticket.rep_firstname}</td>
              </tr>
              <tr>
                <td>Nachname</td>
                <td>${ticket.rep_lastname}</td>
              </tr>
              <tr>
                <td>Straße</td>
                <td>${ticket.rep_street}</td>
              </tr>
              <tr>
                <td>PLZ</td>
                <td>${ticket.rep_zip}</td>
              </tr>
              <tr>
                <td>Ort</td>
                <td>${ticket.rep_city}</td>
              </tr>
              <tr>
                <td>Land</td>
                <td>${ticket.rep_country}</td>
              </tr>
              <tr>
                <td>Typ</td>
                <td>${ticket.rep_type}</td>
              </tr>
            </table>
          </td>
        </tr>
        <tr tal:condition="ticket_rep1 or ticket_rep2">
          <td>Vertreter für:</td>
          <td tal:condition="ticket_rep1">
            <table>
              <tr>
                <td>Ticket ID</td>
                <td>${ticket_rep1.id}</td>
              </tr>
              <tr>
                <td>Vorname</td>
                <td>${ticket_rep1.firstname}</td>
              </tr>
              <tr>
                <td>Nachname</td>
                <td>${ticket_rep1.lastname}</td>
              </tr>
              <tr>
                <td>Email</td>
                <td>${ticket_rep1.email}</td>
              </tr>
            </table>
          </td>
          <td tal:condition="ticket_rep2">
            <table>
              <tr>
                <td>Ticket ID</td>
                <td>${ticket_rep2.id}</td>
              </tr>
              <tr>
                <td>Vorname</td>
                <td>${ticket_rep2.firstname}</td>
              </tr>
              <tr>
                <td>Nachname</td>
                <td>${ticket_rep2.lastname}</td>
              </tr>
              <tr>
                <td>Email</td>
                <td>${ticket_rep2.email}</td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td>Event-T-Shirt</td>
          <td>${'Yes' if ticket.ticket_tshirt else "No"}</td>
        </tr>
        <tr tal:condition="ticket.ticket_tshirt">
          <td>Shirt-Specs</td>
          <td>Type: ${ticket.ticket_tshirt_type} Size: ${ticket.ticket_tshirt_size}</td>
        </tr>
        <tr>
          <td>Rabatt</td>
          <td>${ticket.discount}</td>
        </tr>
        <tr>
          <td>zu zahlen</td>
          <td>${ticket.the_total}</td>
        </tr>
        <tr>
          <td>Bestelldatum</td>
          <td>${ticket.date_of_submission}</td>
        </tr>
        <tr>
          <td>Zahlungseingang?</td>
          <td>${ticket.payment_received or "No"}</td>
        </tr>
        <tr>
          <td>Zahlungsdatum</td>
          <td>${ticket.payment_received_date}</td>
        </tr>
      </table>
    </div>

    <div>
      <h2>Bearbeiten</h2>
      <div id="form" tal:content="structure form"/>
    </div>

  </tal:block>

  <tal:block metal:fill-slot="deform-load">
    <!--! loading deform -->
    <script type="text/javascript">deform.load()</script>
  </tal:block>

  <tal:block metal:fill-slot="footer">
      <a href="${request.route_url('dashboard', number=0)}" class="btn btn-info">Dashboard</a>.
      <a href="${request.route_url('logout')}" class="btn btn-danger">
        ${request.authenticated_userid} abmelden
      </a>

      <br /><br />
      <div>
        <h2>Staff Kommentare</h2>
        <span tal:omit-tag="" 
              tal:repeat="line staff_comment.splitlines()|''">
          ${line}<br />
        </span>
      </div>

      <br /><br />
      <div>
        <h2>Cashiers Kommentare</h2>
        <span tal:omit-tag="" 
              tal:repeat="line cashiers_comment.splitlines()|''">
          ${line}<br />
        </span>
      </div>

  </tal:block>
</html>
